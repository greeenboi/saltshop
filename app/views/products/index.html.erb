<% content_for :title, "Products" %>

<div class="products-container max-w-7xl mx-auto px-6 lg:px-8 py-8" data-controller="products-filter">
  <% if notice.present? %>
    <div class="alert alert-success mb-4"><i data-lucide="check-circle" class="w-4 h-4"></i><span><%= notice %></span></div>
  <% end %>

  <div class="flex flex-col gap-4 mb-6 md:flex-row md:items-center md:justify-between">
    <h1 class="font-semibold text-3xl" style="color: var(--text);">Shop Our Products</h1>
    <%= form_with url: products_path, method: :get, local: true, class: "flex gap-2 w-full md:w-auto" do %>
      <%= text_field_tag :q, params[:q], placeholder: "Search products by name…", class: "flex-1 md:w-80 px-3 py-2 border rounded-md" %>
      <%= submit_tag "Search", class: "btn-primary" %>
      <% if params[:q].present? %>
        <%= link_to "Clear", products_path, class: "btn-ghost" %>
      <% end %>
    <% end %>
  </div>

  <div class="filters mb-6 card p-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
      <div>
        <label for="filter-min-price" class="block text-sm text-muted">Min price</label>
        <input id="filter-min-price" type="number" min="0" step="0.01" class="w-full px-3 py-2 border rounded-md" placeholder="0.00"
               data-products-filter-target="min" data-action="input->products-filter#run">
      </div>
      <div>
        <label for="filter-max-price" class="block text-sm text-muted">Max price</label>
        <input id="filter-max-price" type="number" min="0" step="0.01" class="w-full px-3 py-2 border rounded-md" placeholder="9999.99"
               data-products-filter-target="max" data-action="input->products-filter#run">
      </div>
      <div>
        <label for="filter-stock" class="block text-sm text-muted">Stock</label>
        <select id="filter-stock" class="w-full px-3 py-2 border rounded-md"
                data-products-filter-target="stock" data-action="change->products-filter#run">
          <option value="all" selected>All</option>
          <option value="in">In stock</option>
          <option value="out">Out of stock</option>
        </select>
      </div>
      <div class="flex gap-2">
        <div class="grow">
          <label for="sort-by" class="block text-sm text-muted">Sort</label>
          <select id="sort-by" class="w-full px-3 py-2 border rounded-md"
                  data-products-filter-target="sort" data-action="change->products-filter#applySort">
            <option value="none" selected>None</option>
            <option value="name-asc">Name ↑</option>
            <option value="name-desc">Name ↓</option>
            <option value="price-asc">Price ↑</option>
            <option value="price-desc">Price ↓</option>
            <option value="stock-asc">Stock ↑</option>
            <option value="stock-desc">Stock ↓</option>
          </select>
        </div>
        <button class="self-end btn-ghost" data-action="click->products-filter#reset"><i data-lucide="rotate-ccw" class="w-4 h-4"></i> Reset</button>
      </div>
    </div>
  </div>

  <% if @products.any? %>
    <div class="product-grid grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6" data-products-filter-target="grid">
      <% @products.each do |product| %>
        <div class="product-card card card-interactive overflow-hidden" data-products-filter-target="card" data-price="<%= product.price.to_f %>" data-stock="<%= product.stock.to_i %>" data-name="<%= product.name.to_s.downcase %>">
          <!-- Product image -->
          <div class="w-full aspect-square bg-[var(--surface-alt)] border-b border-[rgba(54,47,45,0.08)] overflow-hidden">
            <% if product.images.attached? %>
              <%= link_to product_path(product), class: "block w-full h-full" do %>
                <%= cl_image_tag(product.images.first.key, width: 600, height: 600, crop: "fill", alt: product.name, class: "w-full h-full object-cover", loading: "lazy") %>
              <% end %>
            <% elsif product.respond_to?(:image_url) && product.image_url.present? %>
              <%= link_to product_path(product), class: "block w-full h-full" do %>
                <%= image_tag product.image_url, alt: product.name, class: "w-full h-full object-cover", loading: "lazy" %>
              <% end %>
            <% else %>
              <div class="w-full h-full flex items-center justify-center text-sm text-subtle"><i data-lucide="image" class="w-5 h-5 mr-1"></i> No image</div>
            <% end %>
          </div>

          <div class="p-4 flex flex-col h-full">
            <div class="flex-1">
              <h3 class="text-lg font-semibold mb-1" style="color: var(--text);">
                <%= link_to product.name, product_path(product), class: "hover:underline" %>
              </h3>
              <div class="flex items-center justify-between mb-2">
                <span class="chip" data-testid="product-price-badge">
                  <i data-lucide="circle-dollar-sign" class="w-4 h-4"></i>
                  <%= number_to_currency(product.price || 0) %>
                </span>
                <% if business_user? %>
                  <% if product.stock.to_i > 0 %>
                    <span class="badge badge-tonal" data-testid="product-stock">In stock: <%= product.stock.to_i %></span>
                  <% else %>
                    <span class="badge" style="background: var(--error-50); color: var(--error-700);" data-testid="product-stock">Out of stock</span>
                  <% end %>
                <% end %>
              </div>
              <p class="text-sm text-subtle mb-3"><%= truncate(product.description, length: 100) %></p>
            </div>

            <div class="mt-auto pt-2 border-t flex items-center justify-between">
              <div class="actions flex flex-col sm:flex-row gap-2">
                <% if product.stock.to_i > 0 %>
                  <%= button_to cart_items_path(product_id: product.id), method: :post, class: "btn-primary", form_class: "m-0" do %>
                    <i data-lucide="shopping-cart" class="w-4 h-4"></i>
                    Add to Cart
                  <% end %>
                <% else %>
                  <span class="text-sm px-3 py-2 bg-[var(--brand-50)] text-subtle rounded-md">Out of Stock</span>
                <% end %>
              </div>
              <div class="flex gap-2 ml-2">
                <%= link_to "Show", product, class: "btn-ghost" %>
              </div>

              <div class="hidden"></div>
            </div>

            <div class="mt-4 border-t pt-3 flex items-center justify-between">
              <div class="flex gap-2">
                <%= link_to "View", product, class: "btn-ghost" %>
                <% if can_manage_product?(product) %>
                  <%= link_to "Edit", edit_admin_product_path(product), class: "btn-pill" %>
                <% end %>
              </div>
              <div>
                <% if can_manage_product?(product) %>
                  <%= button_to "Destroy", admin_product_path(product), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn-pill btn-pill-danger" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="pagination mt-6">
      <%= paginate @products, params: request.query_parameters %>
    </div>
  <% else %>
    <p class="text-center my-10 text-subtle">No products found.</p>
  <% end %>
</div>
