<% content_for :title, "Products" %>

<div class="products-container max-w-7xl mx-auto p-6">
  <% if notice.present? %>
    <p id="notice" class="py-2 px-3 bg-green-50 mb-5 text-green-600 font-medium rounded-md inline-block"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-semibold text-3xl">Shop Our Products</h1>
  </div>

  <div class="filters mb-6">
    <!-- Add filters here later -->
  </div>

  <% if @products.any? %>
    <div class="product-grid grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @products.each do |product| %>
        <div class="product-card bg-white shadow-sm rounded-lg overflow-hidden border border-gray-100">
          <div class="p-4 flex flex-col h-full">
            <div class="flex-1">
              <h3 class="text-lg font-semibold mb-1">
                <%= link_to product.name, product_path(product), class: "hover:underline text-gray-800" %>
              </h3>
              <p class="text-sm text-gray-500 mb-3"><%= truncate(product.description, length: 100) %></p>
            </div>

            <div class="mt-3 flex items-center justify-between">
              <div>
                <p class="price text-xl font-bold text-gray-900"><%= number_to_currency(product.price) %></p>
                <% if product.stock && product.stock > 0 %>
                  <p class="text-xs text-green-600">In stock: <span class="font-medium"><%= product.stock %></span></p>
                <% else %>
                  <p class="text-xs text-red-500">Out of stock</p>
                <% end %>
              </div>

              <div class="actions flex flex-col sm:flex-row gap-2">
                <% if product.stock && product.stock > 0 %>
                  <%= button_to cart_items_path(product_id: product.id), method: :post, class: "px-3 py-2 bg-indigo-600 hover:bg-indigo-500 text-white rounded-md text-sm", form_class: "m-0" do %>
                    Add to Cart
                  <% end %>
                <% else %>
                  <span class="out-of-stock text-sm px-3 py-2 bg-gray-50 text-gray-400 rounded-md">Out of Stock</span>
                <% end %>
              </div>
            </div>

            <div class="mt-4 border-t pt-3 flex items-center justify-between">
              <div class="flex gap-2">
                <%= link_to "Show", product, class: "text-sm px-3 py-2 rounded-md bg-gray-100 hover:bg-gray-50" %>
                <%= link_to "Edit", edit_product_path(product), class: "text-sm px-3 py-2 rounded-md bg-gray-100 hover:bg-gray-50" %>
              </div>
              <div>
                <%= button_to "Destroy", product, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-sm px-3 py-2 rounded-md bg-red-600 hover:bg-red-500 text-white" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="pagination mt-6">
      <%= paginate @products %>
    </div>
  <% else %>
    <p class="text-center my-10 text-gray-500">No products found.</p>
  <% end %>
</div>
