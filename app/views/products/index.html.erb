<% content_for :title, "Products" %>

<div class="products-container max-w-7xl mx-auto p-6" data-controller="products-filter">
  <% if notice.present? %>
    <p id="notice" class="py-2 px-3 bg-green-50 mb-5 text-green-600 font-medium rounded-md inline-block"><%= notice %></p>
  <% end %>

  <div class="flex flex-col gap-4 mb-6 md:flex-row md:items-center md:justify-between">
    <h1 class="font-semibold text-3xl">Shop Our Products</h1>
    <%= form_with url: products_path, method: :get, local: true, class: "flex gap-2 w-full md:w-auto" do %>
      <%= text_field_tag :q, params[:q], placeholder: "Search products by name…", class: "flex-1 md:w-80 px-3 py-2 border rounded-md" %>
      <%= submit_tag "Search", class: "px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-md font-medium" %>
      <% if params[:q].present? %>
        <%= link_to "Clear", products_path, class: "px-3 py-2 bg-gray-100 hover:bg-gray-50 rounded-md text-sm" %>
      <% end %>
    <% end %>
  </div>

  <div class="filters mb-6 bg-white shadow-sm rounded-lg border border-gray-100 p-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
      <div>
        <label for="filter-min-price" class="block text-sm text-gray-600">Min price</label>
        <input id="filter-min-price" type="number" min="0" step="0.01" class="w-full px-3 py-2 border rounded-md" placeholder="0.00"
               data-products-filter-target="min" data-action="input->products-filter#run">
      </div>
      <div>
        <label for="filter-max-price" class="block text-sm text-gray-600">Max price</label>
        <input id="filter-max-price" type="number" min="0" step="0.01" class="w-full px-3 py-2 border rounded-md" placeholder="9999.99"
               data-products-filter-target="max" data-action="input->products-filter#run">
      </div>
      <div>
        <label for="filter-stock" class="block text-sm text-gray-600">Stock</label>
        <select id="filter-stock" class="w-full px-3 py-2 border rounded-md"
                data-products-filter-target="stock" data-action="change->products-filter#run">
          <option value="all" selected>All</option>
          <option value="in">In stock</option>
          <option value="out">Out of stock</option>
        </select>
      </div>
      <div class="flex gap-2">
        <div class="grow">
          <label for="sort-by" class="block text-sm text-gray-600">Sort</label>
          <select id="sort-by" class="w-full px-3 py-2 border rounded-md"
                  data-products-filter-target="sort" data-action="change->products-filter#applySort">
            <option value="none" selected>None</option>
            <option value="name-asc">Name ↑</option>
            <option value="name-desc">Name ↓</option>
            <option value="price-asc">Price ↑</option>
            <option value="price-desc">Price ↓</option>
            <option value="stock-asc">Stock ↑</option>
            <option value="stock-desc">Stock ↓</option>
          </select>
        </div>
        <button class="self-end px-3 py-2 bg-gray-100 hover:bg-gray-50 rounded-md text-sm"
                data-action="click->products-filter#reset">Reset</button>
      </div>
    </div>
  </div>

  <% if @products.any? %>
    <div class="product-grid grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6" data-products-filter-target="grid">
      <% @products.each do |product| %>
        <div class="product-card bg-white shadow-sm rounded-lg overflow-hidden border border-gray-100" data-products-filter-target="card" data-price="<%= product.price.to_f %>" data-stock="<%= product.stock.to_i %>" data-name="<%= product.name.to_s.downcase %>">
          <!-- Product image -->
          <div class="w-full aspect-square bg-gray-50 border-b border-gray-100 overflow-hidden">
            <% if product.images.attached? %>
              <%= link_to product_path(product), class: "block w-full h-full" do %>
                <%= cl_image_tag(product.images.first.key, width: 600, height: 600, crop: "fill", alt: product.name, class: "w-full h-full object-cover", loading: "lazy") %>
              <% end %>
            <% elsif product.respond_to?(:image_url) && product.image_url.present? %>
              <%= link_to product_path(product), class: "block w-full h-full" do %>
                <%= image_tag product.image_url, alt: product.name, class: "w-full h-full object-cover", loading: "lazy" %>
              <% end %>
            <% else %>
              <div class="w-full h-full flex items-center justify-center text-sm text-gray-400">No image</div>
            <% end %>
          </div>

          <div class="p-4 flex flex-col h-full">
            <div>
              <h3 class="text-lg font-semibold mb-1">
                <%= link_to product.name, product_path(product), class: "hover:underline text-gray-800" %>
              </h3>
              <div class="flex items-center justify-between mb-2">
                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-indigo-50 text-indigo-700" data-testid="product-price-badge">
                  <%= number_to_currency(product.price || 0) %>
                </span>
                <% if business_user? %>
                  <% if product.stock.to_i > 0 %>
                    <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-green-50 text-green-700" data-testid="product-stock">In stock: <%= product.stock.to_i %></span>
                  <% else %>
                    <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-red-50 text-red-600" data-testid="product-stock">Out of stock</span>
                  <% end %>
                <% end %>
              </div>
              <p class="text-sm text-gray-500 mb-3"><%= truncate(product.description, length: 100) %></p>
            </div>

            <div class="mt-auto pt-2 border-t flex items-center justify-between">
              <div class="actions flex flex-col sm:flex-row gap-2">
                <% if product.stock.to_i > 0 %>
                  <%= button_to cart_items_path(product_id: product.id), method: :post, class: "px-3 py-2 bg-indigo-600 hover:bg-indigo-500 text-white rounded-md text-sm", form_class: "m-0" do %>
                    Add to Cart
                  <% end %>
                <% else %>
                  <span class="out-of-stock text-sm px-3 py-2 bg-gray-50 text-gray-400 rounded-md">Out of Stock</span>
                <% end %>
              </div>
              <div class="flex gap-2 ml-2">
                <%= link_to "Show", product, class: "text-sm px-3 py-2 rounded-md bg-gray-100 hover:bg-gray-50" %>
                <% if can_manage_product?(product) %>
                  <%= link_to "Edit", edit_admin_product_path(product), class: "text-sm px-3 py-2 rounded-md bg-gray-100 hover:bg-gray-50" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="pagination mt-6">
      <%= paginate @products, params: request.query_parameters %>
    </div>
  <% else %>
    <p class="text-center my-10 text-gray-500">No products found.</p>
  <% end %>
</div>
