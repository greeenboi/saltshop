<% content_for :title, "Checkout" %>

<div class="max-w-7xl mx-auto px-6 lg:px-8 py-8">
  <h1 class="font-semibold text-3xl mb-8" style="color: var(--text);">Checkout</h1>

  <div class="md:flex md:gap-8">
    <!-- Order Review -->
    <div class="md:w-2/3 w-full">
      <div class="card p-6 mb-6">
        <h2 class="text-2xl font-semibold mb-4" style="color: var(--text);">Review Your Order</h2>

        <div class="space-y-4">
          <% @cart.cart_items.each do |item| %>
            <div class="flex gap-4 items-center border-b last:border-b-0 pb-4">
              <div class="w-20 h-20 bg-[var(--surface-alt)] rounded-md flex items-center justify-center overflow-hidden border border-[rgba(54,47,45,0.08)]">
                <% if item.product.respond_to?(:image_url) && item.product.image_url.present? %>
                  <%= image_tag item.product.image_url, alt: item.product.name, class: "w-full h-full object-cover" %>
                <% else %>
                  <i data-lucide="image" class="w-4 h-4 text-subtle"></i>
                <% end %>
              </div>

              <div class="flex-1">
                <h3 class="font-medium" style="color: var(--text);"><%= item.product.name %></h3>
                <p class="text-sm text-subtle">Quantity: <%= item.quantity %></p>
              </div>

              <div class="text-right">
                <p class="font-semibold" style="color: var(--text);"><%= number_to_currency(item.product.price * item.quantity) %></p>
                <p class="text-sm text-subtle"><%= number_to_currency(item.product.price) %> each</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Shipping Information -->
      <div class="card p-6">
        <h2 class="text-2xl font-semibold mb-4" style="color: var(--text);">Shipping Information</h2>

        <div class="space-y-2">
          <p class="font-medium" style="color: var(--text);"><%= current_user.name %></p>
          <p class="text-subtle"><%= current_user.email %></p>
        </div>
        <div class="text-sm text-subtle mt-4">
          <p>Your order will be processed and shipped to your registered address.</p>
          <p class="mt-2">You will receive order confirmation and tracking details via email.</p>
        </div>
      </div>
    </div>

    <!-- Order Summary -->
    <div class="md:w-1/3 w-full mt-6 md:mt-0">
      <div class="card p-6 sticky top-6">
        <h2 class="text-xl font-semibold mb-4" style="color: var(--text);">Order Summary</h2>

        <div class="space-y-3 text-sm mb-6">
          <div class="flex justify-between text-subtle">
            <span>Subtotal</span>
            <span><%= number_to_currency(@subtotal) %></span>
          </div>

          <div class="flex justify-between text-subtle">
            <span>Tax (10%)</span>
            <span><%= number_to_currency(@tax) %></span>
          </div>

          <div class="flex justify-between text-subtle">
            <span>Shipping</span>
            <span class="text-green-700 font-medium">FREE</span>
          </div>

          <div class="border-t pt-3 flex justify-between font-bold text-lg" style="color: var(--text);">
            <span>Total</span>
            <span><%= number_to_currency(@total) %></span>
          </div>
        </div>

        <%= form_with url: checkout_path, method: :post do |f| %>
          <div class="space-y-3">
            <%= f.submit "Place Order", class: "w-full btn-primary justify-center" %>
            <%= link_to "Back to Cart", cart_path, class: "w-full block text-center btn-ghost" %>
          </div>
        <% end %>

        <div class="mt-6 text-xs text-subtle text-center">
          <p>By placing this order, you agree to our terms and conditions.</p>
        </div>
      </div>
    </div>
  </div>
</div>
