<footer class="mt-16 border-t border-[rgba(54,47,45,0.12)] bg-white/80 backdrop-blur supports-[backdrop-filter]:bg-white/60">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      <div class="space-y-3">
        <div class="flex items-center gap-2">
          <i data-lucide="shopping-bag" class="w-6 h-6 text-[var(--brand-600)]"></i>
          <span class="text-lg font-semibold">SaltShop</span>
        </div>
        <p class="text-sm text-muted">Minimal, matte and modern shopping experience. Curated goods for everyday life.</p>
        <div class="flex items-center gap-3 pt-2">
          <a href="#" class="action-icon" aria-label="Website"><i data-lucide="globe" class="w-4 h-4"></i></a>
          <a href="#" class="action-icon" aria-label="Chat"><i data-lucide="message-circle" class="w-4 h-4"></i></a>
          <a href="#" class="action-icon" aria-label="Inspire"><i data-lucide="sparkles" class="w-4 h-4"></i></a>
        </div>
      </div>

      <div>
        <h4 class="text-sm font-semibold uppercase tracking-wide text-muted">Shop</h4>
        <ul class="mt-4 space-y-2 text-sm">
          <li><%= link_to "All Products", products_path, class: "hover:text-[var(--brand-700)] transition-colors" %></li>
          <% if logged_in? && current_user.role&.name == 'admin' %>
            <li><%= link_to "Dashboard", admin_root_path, class: "hover:text-[var(--brand-700)] transition-colors" %></li>
            <li><%= link_to "Orders", admin_orders_path, class: "hover:text-[var(--brand-700)] transition-colors" %></li>
          <% else %>
            <li><%= link_to "My Orders", orders_path, class: "hover:text-[var(--brand-700)] transition-colors" %></li>
            <li><%= link_to "Cart", cart_path, class: "hover:text-[var(--brand-700)] transition-colors" %></li>
          <% end %>
        </ul>
      </div>

      <div>
        <h4 class="text-sm font-semibold uppercase tracking-wide text-muted">Company</h4>
        <ul class="mt-4 space-y-2 text-sm">
          <li><%= link_to "About Us", about_path, class: "hover:text-[var(--brand-700)] transition-colors" %></li>
          <li><%= link_to "Contact", contact_path, class: "hover:text-[var(--brand-700)] transition-colors" %></li>
        </ul>
      </div>

      <div>
        <h4 class="text-sm font-semibold uppercase tracking-wide text-muted">Legal</h4>
        <ul class="mt-4 space-y-2 text-sm">
          <li><%= link_to "Terms & Conditions", terms_path, class: "hover:text-[var(--brand-700)] transition-colors" %></li>
          <li><%= link_to "Privacy Policy", privacy_path, class: "hover:text-[var(--brand-700)] transition-colors" %></li>
          <li><%= link_to "Shipping Policy", shipping_path, class: "hover:text-[var(--brand-700)] transition-colors" %></li>
          <li><%= link_to "Returns & Refunds", returns_path, class: "hover:text-[var(--brand-700)] transition-colors" %></li>
        </ul>
      </div>
    </div>

    <div class="divider-h my-8"></div>

    <div class="flex flex-col sm:flex-row items-center justify-between gap-4 text-xs text-subtle">
      <p>&copy; <%= Time.current.year %> SaltShop. All rights reserved.</p>
      <p>Built with care. Replace this with your storeâ€™s tagline.</p>
    </div>
  </div>
</footer>
