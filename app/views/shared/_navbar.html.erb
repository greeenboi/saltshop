<nav class="relative z-50 isolation-isolate bg-white/90 backdrop-blur border-b border-[rgba(54,47,45,0.12)]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo and Brand -->
      <div class="flex items-center">
        <%= link_to root_path, class: "flex items-center space-x-2 group" do %>
          <i data-lucide="shopping-bag" class="w-7 h-7 text-[var(--brand-600)] transition-transform group-hover:animate-float"></i>
          <span class="text-xl font-semibold" style="color: var(--text);">SaltShop</span>
        <% end %>
      </div>

      <!-- Navigation Links -->
      <div class="hidden md:flex items-center space-x-8">
        <%= link_to "Products", products_path, class: "font-medium transition text-muted hover:text-[var(--brand-700)]" %>

        <% if logged_in? %>
          <% if current_user.role&.name == 'admin' %>
            <%= link_to "Dashboard", admin_root_path, class: "font-medium transition text-muted hover:text-[var(--brand-700)]" %>
            <%= link_to "My Products", admin_products_path, class: "font-medium transition text-muted hover:text-[var(--brand-700)]" %>
            <%= link_to "Orders", admin_orders_path, class: "font-medium transition text-muted hover:text-[var(--brand-700)]" %>
          <% else %>
            <%= link_to "My Orders", orders_path, class: "font-medium transition text-muted hover:text-[var(--brand-700)]" %>
          <% end %>
        <% end %>
      </div>

      <!-- Right Side - User Menu -->
      <div class="flex items-center space-x-4">
        <% if logged_in? %>
          <!-- Cart Icon (only for customers) -->
          <% if current_user.role&.name != 'admin' %>
            <%= link_to cart_path, class: "relative transition text-muted hover:text-[var(--brand-700)]" do %>
              <i data-lucide="shopping-cart" class="w-6 h-6"></i>
              <% if cart_item_count > 0 %>
                <span class="absolute -top-2 -right-2 bg-[var(--brand-600)] text-white text-xs rounded-full w-5 h-5 flex items-center justify-center font-semibold">
                  <%= cart_item_count %>
                </span>
              <% end %>
            <% end %>
          <% end %>

          <!-- User Dropdown -->
          <div class="relative"
               x-data="{
                 open: false,
                 menuStyle: '',
                 compute() {
                   const btn = $refs.userBtn;
                   if (!btn) return;
                   const rect = btn.getBoundingClientRect();
                   const width = 224; // w-56
                   const left = Math.min(window.innerWidth - width - 16, Math.max(16, rect.right - width));
                   const top = rect.bottom + 8 + window.scrollY;
                   this.menuStyle = `top:${top}px; left:${left}px;`;
                 }
               }"
               @resize.window="open && compute()"
               @scroll.window="open && compute()">
            <button x-ref="userBtn" @click="open = !open; $nextTick(() => compute())" class="flex items-center space-x-2 text-muted hover:text-[var(--brand-700)] transition focus:outline-none">
              <div class="w-8 h-8 bg-[var(--brand-100)] rounded-full flex items-center justify-center">
                <% if current_user.photo_url.present? %>
                  <%= image_tag current_user.photo_url, alt: current_user.name, class: "w-8 h-8 rounded-full object-cover", style: "width: 32px; height: 32px;" %>
                <% else %>
                  <span class="text-[var(--brand-700)] font-semibold text-sm"><%= current_user.name.first.upcase %></span>
                <% end %>
              </div>
              <span class="font-medium hidden lg:block"><%= current_user.name %></span>
              <i data-lucide="chevron-down" class="w-4 h-4"></i>
            </button>

            <!-- Dropdown Menu (teleported to body to avoid clipping) -->
            <template x-teleport="body">
              <div x-show="open" x-transition x-cloak @click.outside="open = false" @keydown.escape.window="open = false"
                   class="fixed w-56 bg-white rounded-lg shadow-lg border border-[rgba(54,47,45,0.12)] py-2 z-[99999]"
                   :style="menuStyle">
                <div class="px-4 py-2 border-b border-[rgba(54,47,45,0.12)]">
                  <p class="text-sm font-semibold" style="color: var(--text);"><%= current_user.name %></p>
                  <p class="text-xs text-subtle"><%= current_user.email %></p>
                  <% if current_user.role %>
                    <span class="inline-flex items-center mt-1 px-2 py-0.5 bg-[var(--secondary-100)] text-[var(--secondary-700)] text-xs font-medium rounded-full">
                      <%= current_user.role.name.titleize %>
                    </span>
                  <% end %>
                </div>

                <% if current_user.role&.name == 'admin' %>
                  <%= link_to admin_root_path, class: "block px-4 py-2 text-sm text-muted hover:bg-[var(--brand-50)] transition" do %>
                    <div class="flex items-center space-x-2">
                      <i data-lucide="layout-dashboard" class="w-4 h-4"></i>
                      <span>Dashboard</span>
                    </div>
                  <% end %>
                  <%= link_to admin_products_path, class: "block px-4 py-2 text-sm text-muted hover:bg-[var(--brand-50)] transition" do %>
                    <div class="flex items-center space-x-2">
                      <i data-lucide="package" class="w-4 h-4"></i>
                      <span>My Products</span>
                    </div>
                  <% end %>
                  <%= link_to admin_orders_path, class: "block px-4 py-2 text-sm text-muted hover:bg-[var(--brand-50)] transition" do %>
                    <div class="flex items-center space-x-2">
                      <i data-lucide="receipt" class="w-4 h-4"></i>
                      <span>Orders</span>
                    </div>
                  <% end %>
                <% else %>
                  <%= link_to orders_path, class: "block px-4 py-2 text-sm text-muted hover:bg-[var(--brand-50)] transition" do %>
                    <div class="flex items-center space-x-2">
                      <i data-lucide="receipt" class="w-4 h-4"></i>
                      <span>My Orders</span>
                    </div>
                  <% end %>
                  <%= link_to cart_path, class: "block px-4 py-2 text-sm text-muted hover:bg-[var(--brand-50)] transition" do %>
                    <div class="flex items-center space-x-2">
                      <i data-lucide="shopping-cart" class="w-4 h-4"></i>
                      <span>Shopping Cart</span>
                    </div>
                  <% end %>
                <% end %>

                <div class="border-t border-[rgba(54,47,45,0.12)] mt-2 pt-2">
                  <%= link_to edit_user_path(current_user), class: "block px-4 py-2 text-sm text-muted hover:bg-[var(--brand-50)] transition" do %>
                    <div class="flex items-center space-x-2">
                      <i data-lucide="settings" class="w-4 h-4"></i>
                      <span>Settings</span>
                    </div>
                  <% end %>
                  <%= button_to logout_path, method: :delete, class: "w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50 transition" do %>
                    <div class="flex items-center space-x-2">
                      <i data-lucide="log-out" class="w-4 h-4"></i>
                      <span>Logout</span>
                    </div>
                  <% end %>
                </div>
              </div>
            </template>
          </div>
        <% else %>
          <!-- Not Logged In -->
          <%= link_to "Login", login_path, class: "font-medium transition text-muted hover:text-[var(--brand-700)]" %>
          <%= link_to "Sign Up", signup_path, class: "px-4 py-2 rounded-md font-medium transition text-white" , style: "background: var(--brand-600)" %>
        <% end %>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button @click="mobileMenuOpen = !mobileMenuOpen" class="text-muted hover:text-[var(--brand-700)] focus:outline-none">
          <i data-lucide="menu" class="w-6 h-6"></i>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div x-show="mobileMenuOpen" @click.away="mobileMenuOpen = false" x-cloak class="md:hidden border-t border-[rgba(54,47,45,0.12)] bg-white animate-fade-in">
    <div class="px-4 py-3 space-y-2">
      <%= link_to "Products", products_path, class: "block py-2 font-medium text-muted hover:text-[var(--brand-700)]" %>

      <% if logged_in? %>
        <% if current_user.role&.name == 'admin' %>
          <%= link_to "Dashboard", admin_root_path, class: "block py-2 font-medium text-muted hover:text-[var(--brand-700)]" %>
          <%= link_to "My Products", admin_products_path, class: "block py-2 font-medium text-muted hover:text-[var(--brand-700)]" %>
          <%= link_to "Orders", admin_orders_path, class: "block py-2 font-medium text-muted hover:text-[var(--brand-700)]" %>
        <% else %>
          <%= link_to "Shopping Cart", cart_path, class: "block py-2 font-medium text-muted hover:text-[var(--brand-700)]" %>
          <%= link_to "My Orders", orders_path, class: "block py-2 font-medium text-muted hover:text-[var(--brand-700)]" %>
        <% end %>

        <div class="border-t pt-2 mt-2">
          <%= link_to "Settings", edit_user_path(current_user), class: "block py-2 font-medium text-muted hover:text-[var(--brand-700)]" %>
          <%= button_to "Logout", logout_path, method: :delete, class: "block w-full text-left py-2 text-red-600 hover:text-red-700 font-medium" %>
        </div>
      <% else %>
        <%= link_to "Login", login_path, class: "block py-2 font-medium text-muted hover:text-[var(--brand-700)]" %>
        <%= link_to "Sign Up", signup_path, class: "block py-2 text-white text-center rounded-md font-medium", style: "background: var(--brand-600)" %>
      <% end %>
    </div>
  </div>
</nav>

<style>
  [x-cloak] { display: none !important; }
</style>
