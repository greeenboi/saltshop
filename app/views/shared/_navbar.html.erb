<nav class="bg-white shadow-md border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo and Brand -->
      <div class="flex items-center">
        <%= link_to root_path, class: "flex items-center space-x-2" do %>
          <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
          </svg>
          <span class="text-xl font-bold text-gray-900">SaltShop</span>
        <% end %>
      </div>

      <!-- Navigation Links -->
      <div class="hidden md:flex items-center space-x-8">
        <%= link_to "Products", products_path, class: "text-gray-700 hover:text-indigo-600 font-medium transition" %>

        <% if logged_in? %>
          <% if current_user.role&.name == 'admin' %>
            <%= link_to "Dashboard", admin_root_path, class: "text-gray-700 hover:text-indigo-600 font-medium transition" %>
            <%= link_to "My Products", admin_products_path, class: "text-gray-700 hover:text-indigo-600 font-medium transition" %>
            <%= link_to "Orders", admin_orders_path, class: "text-gray-700 hover:text-indigo-600 font-medium transition" %>
          <% else %>
            <%= link_to "My Orders", orders_path, class: "text-gray-700 hover:text-indigo-600 font-medium transition" %>
          <% end %>
        <% end %>
      </div>

      <!-- Right Side - User Menu -->
      <div class="flex items-center space-x-4">
        <% if logged_in? %>
          <!-- Cart Icon (only for customers) -->
          <% if current_user.role&.name != 'admin' %>
            <%= link_to cart_path, class: "relative text-gray-700 hover:text-indigo-600 transition" do %>
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
              <% customer = Customer.find_by(user: current_user) %>
              <% if customer %>
                <% cart = Cart.find_by(customer: customer) %>
                <% if cart && cart.cart_items.any? %>
                  <span class="absolute -top-2 -right-2 bg-indigo-600 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center font-semibold">
                    <%= cart.cart_items.sum(:quantity) %>
                  </span>
                <% end %>
              <% end %>
            <% end %>
          <% end %>

          <!-- User Dropdown -->
          <div class="relative" x-data="{ open: false }">
            <button @click="open = !open" class="flex items-center space-x-2 text-gray-700 hover:text-indigo-600 transition focus:outline-none">
              <div class="w-8 h-8 bg-indigo-100 rounded-full flex items-center justify-center">
                <% if current_user.photo_url.present? %>
                  <%= image_tag current_user.photo_url, alt: current_user.name, class: "w-8 h-8 rounded-full object-cover", style: "width: 32px; height: 32px;" %>
                <% else %>
                  <span class="text-indigo-600 font-semibold text-sm"><%= current_user.name.first.upcase %></span>
                <% end %>
              </div>
              <span class="font-medium hidden lg:block"><%= current_user.name %></span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>

            <!-- Dropdown Menu -->
            <div x-show="open" @click.away="open = false" x-cloak class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-2 z-50">
              <div class="px-4 py-2 border-b border-gray-200">
                <p class="text-sm font-semibold text-gray-900"><%= current_user.name %></p>
                <p class="text-xs text-gray-500"><%= current_user.email %></p>
                <% if current_user.role %>
                  <span class="inline-block mt-1 px-2 py-0.5 bg-indigo-100 text-indigo-800 text-xs font-medium rounded">
                    <%= current_user.role.name.titleize %>
                  </span>
                <% end %>
              </div>

              <% if current_user.role&.name == 'admin' %>
                <%= link_to admin_root_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition" do %>
                  <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
                    </svg>
                    <span>Dashboard</span>
                  </div>
                <% end %>
                <%= link_to admin_products_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition" do %>
                  <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                    </svg>
                    <span>My Products</span>
                  </div>
                <% end %>
                <%= link_to admin_orders_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition" do %>
                  <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                    </svg>
                    <span>Orders</span>
                  </div>
                <% end %>
              <% else %>
                <%= link_to orders_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition" do %>
                  <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                    </svg>
                    <span>My Orders</span>
                  </div>
                <% end %>
                <%= link_to cart_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition" do %>
                  <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                    <span>Shopping Cart</span>
                  </div>
                <% end %>
              <% end %>

              <div class="border-t border-gray-200 mt-2 pt-2">
                <%= link_to edit_user_path(current_user), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition" do %>
                  <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <span>Settings</span>
                  </div>
                <% end %>
                <%= button_to logout_path, method: :delete, class: "w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50 transition" do %>
                  <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                    </svg>
                    <span>Logout</span>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% else %>
          <!-- Not Logged In -->
          <%= link_to "Login", login_path, class: "text-gray-700 hover:text-indigo-600 font-medium transition" %>
          <%= link_to "Sign Up", signup_path, class: "px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg font-medium transition" %>
        <% end %>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button @click="mobileMenuOpen = !mobileMenuOpen" class="text-gray-700 hover:text-indigo-600 focus:outline-none">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div x-show="mobileMenuOpen" @click.away="mobileMenuOpen = false" x-cloak class="md:hidden border-t border-gray-200 bg-white">
    <div class="px-4 py-3 space-y-2">
      <%= link_to "Products", products_path, class: "block py-2 text-gray-700 hover:text-indigo-600 font-medium" %>

      <% if logged_in? %>
        <% if current_user.role&.name == 'admin' %>
          <%= link_to "Dashboard", admin_root_path, class: "block py-2 text-gray-700 hover:text-indigo-600 font-medium" %>
          <%= link_to "My Products", admin_products_path, class: "block py-2 text-gray-700 hover:text-indigo-600 font-medium" %>
          <%= link_to "Orders", admin_orders_path, class: "block py-2 text-gray-700 hover:text-indigo-600 font-medium" %>
        <% else %>
          <%= link_to "Shopping Cart", cart_path, class: "block py-2 text-gray-700 hover:text-indigo-600 font-medium" %>
          <%= link_to "My Orders", orders_path, class: "block py-2 text-gray-700 hover:text-indigo-600 font-medium" %>
        <% end %>

        <div class="border-t pt-2 mt-2">
          <%= link_to "Settings", edit_user_path(current_user), class: "block py-2 text-gray-700 hover:text-indigo-600 font-medium" %>
          <%= button_to "Logout", logout_path, method: :delete, class: "block w-full text-left py-2 text-red-600 hover:text-red-700 font-medium" %>
        </div>
      <% else %>
        <%= link_to "Login", login_path, class: "block py-2 text-gray-700 hover:text-indigo-600 font-medium" %>
        <%= link_to "Sign Up", signup_path, class: "block py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-center rounded-lg font-medium" %>
      <% end %>
    </div>
  </div>
</nav>

<style>
  [x-cloak] { display: none !important; }
</style>
