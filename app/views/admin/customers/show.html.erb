<% content_for :title, "Customer Details - Admin" %>

<div class="max-w-5xl mx-auto p-6">
  <div class="mb-6 flex items-center justify-between">
    <%= link_to admin_customers_path, class: "flex items-center text-gray-600 hover:text-gray-900" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to Customers
    <% end %>
  </div>

  <!-- Customer Info Card -->
  <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-8 mb-6">
    <div class="flex items-start justify-between">
      <div class="flex items-center">
        <div class="w-16 h-16 bg-indigo-100 rounded-full flex items-center justify-center">
          <% if @customer.user.photo_url.present? %>
            <%= image_tag @customer.user.photo_url, alt: @customer.user.name, class: "w-16 h-16 rounded-full object-cover" %>
          <% else %>
            <span class="text-indigo-600 font-bold text-2xl"><%= @customer.user.name.first.upcase %></span>
          <% end %>
        </div>
        <div class="ml-4">
          <h1 class="text-2xl font-bold text-gray-900"><%= @customer.user.name %></h1>
          <p class="text-gray-600">@<%= @customer.user.username %></p>
          <p class="text-sm text-gray-500 mt-1"><%= @customer.user.email %></p>
        </div>
      </div>
      <span class="px-3 py-1 bg-green-100 text-green-800 text-sm font-semibold rounded-full">
        Customer
      </span>
    </div>

    <% if @customer.user.bio.present? %>
      <div class="mt-6 pt-6 border-t">
        <h3 class="text-sm font-semibold text-gray-700 mb-2">Bio</h3>
        <p class="text-gray-600"><%= @customer.user.bio %></p>
      </div>
    <% end %>

    <div class="grid md:grid-cols-3 gap-6 mt-6 pt-6 border-t">
      <div>
        <p class="text-sm text-gray-500 mb-1">Member Since</p>
        <p class="text-lg font-semibold text-gray-900"><%= @customer.created_at.strftime("%B %d, %Y") %></p>
      </div>
      <div>
        <p class="text-sm text-gray-500 mb-1">Total Orders</p>
        <p class="text-lg font-semibold text-gray-900"><%= @orders.count %></p>
      </div>
      <div>
        <p class="text-sm text-gray-500 mb-1">Total Spent</p>
        <p class="text-lg font-semibold text-gray-900">
          <%= number_to_currency(@orders.sum { |order| order.calculate_total }) %>
        </p>
      </div>
    </div>
  </div>

  <!-- Orders History -->
  <div class="bg-white border border-gray-200 rounded-lg shadow-sm">
    <div class="p-6 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Order History</h2>
    </div>

    <% if @orders.any? %>
      <div class="divide-y divide-gray-200">
        <% @orders.each do |order| %>
          <div class="p-6 hover:bg-gray-50 transition">
            <div class="flex items-center justify-between mb-3">
              <div>
                <h3 class="font-semibold text-gray-900">Order #<%= order.id.to_s.first(8) %></h3>
                <p class="text-sm text-gray-500"><%= order.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
              </div>
              <span class="px-3 py-1 rounded-full text-xs font-semibold
                <%= order.status == 'pending' ? 'bg-yellow-100 text-yellow-800' :
                    order.status == 'processing' ? 'bg-blue-100 text-blue-800' :
                    order.status == 'shipped' ? 'bg-purple-100 text-purple-800' :
                    order.status == 'delivered' ? 'bg-green-100 text-green-800' :
                    'bg-gray-100 text-gray-800' %>">
                <%= order.status.titleize %>
              </span>
            </div>

            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm text-gray-600">
                  <%= pluralize(order.order_items.count, 'item') %>
                </p>
              </div>
              <div class="flex items-center gap-4">
                <p class="text-lg font-semibold text-gray-900">
                  <%= number_to_currency(order.calculate_total) %>
                </p>
                <%= link_to "View Order", order_path(order), class: "text-sm text-indigo-600 hover:text-indigo-700 font-medium" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="p-12 text-center">
        <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
        </svg>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">No Orders Yet</h3>
        <p class="text-gray-600">This customer hasn't placed any orders yet.</p>
      </div>
    <% end %>
  </div>
</div>

