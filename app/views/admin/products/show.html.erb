<% content_for :title, @product.name %>

<div class="max-w-5xl mx-auto p-6">
  <% if notice.present? %>
    <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-6 rounded">
      <p class="text-green-700 font-medium"><%= notice %></p>
    </div>
  <% end %>

  <div class="mb-6 flex items-center justify-between">
    <%= link_to admin_products_path, class: "flex items-center text-gray-600 hover:text-gray-900" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to Products
    <% end %>
  </div>

  <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
    <div class="p-8">
      <div class="flex items-start justify-between mb-6">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @product.name %></h1>
          <div class="flex items-center gap-3">
            <span class="px-3 py-1 rounded-full text-sm font-semibold <%= @product.stock > 10 ? 'bg-green-100 text-green-800' : @product.stock > 0 ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' %>">
              <%= @product.stock %> in stock
            </span>
            <span class="text-2xl font-bold text-indigo-600"><%= number_to_currency(@product.price) %></span>
          </div>
        </div>
        <div class="flex gap-2">
          <%= link_to "Edit", edit_admin_product_path(@product), class: "px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg font-medium transition" %>
          <%= button_to "Delete", admin_product_path(@product), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this product?" }, class: "px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg font-medium transition" %>
        </div>
      </div>

      <div class="border-t pt-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-3">Description</h2>
        <p class="text-gray-700 whitespace-pre-line"><%= @product.description %></p>
      </div>

      <div class="grid md:grid-cols-3 gap-6 mt-6 pt-6 border-t">
        <div>
          <p class="text-sm text-gray-500 mb-1">Price</p>
          <p class="text-lg font-semibold text-gray-900"><%= number_to_currency(@product.price) %></p>
        </div>
        <div>
          <p class="text-sm text-gray-500 mb-1">Stock Level</p>
          <p class="text-lg font-semibold text-gray-900"><%= @product.stock %> units</p>
        </div>
        <div>
          <p class="text-sm text-gray-500 mb-1">Created</p>
          <p class="text-lg font-semibold text-gray-900"><%= @product.created_at.strftime("%B %d, %Y") %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-6 flex gap-4">
    <%= link_to "Back to Products", admin_products_path, class: "flex-1 text-center px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-lg transition" %>
    <%= link_to "View Orders", admin_orders_path, class: "flex-1 text-center px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-lg transition" %>
  </div>
</div>

