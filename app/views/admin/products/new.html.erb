<% content_for :title, "New Product - Admin" %>

<div class="max-w-3xl mx-auto p-6">
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-gray-900">Add New Product</h1>
    <p class="text-gray-600 mt-2">Create a new product for your store</p>
  </div>

  <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6">
    <%= render "products/form", product: @product, url: admin_products_path %>

    <div class="flex gap-4 pt-4">
      <%= link_to "Cancel", admin_products_path, class: "flex-1 text-center px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-lg transition" %>
    </div>
  </div>
</div>
