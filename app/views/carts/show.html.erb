<% content_for :title, "Your Cart" %>

<div class="max-w-7xl mx-auto px-6 lg:px-8 py-8">
  <% if notice.present? %>
    <div class="alert alert-success mb-4"><i data-lucide="check-circle" class="w-4 h-4"></i><span><%= notice %></span></div>
  <% end %>

  <h1 class="font-semibold text-3xl mb-6" style="color: var(--text);">Your Shopping Cart</h1>

  <% if @cart && @cart.cart_items.any? %>
    <% subtotal = @cart.cart_items.sum { |item| item.product.price * item.quantity } %>
    <% tax = (subtotal * 0.1).round(2) %>
    <% total = (subtotal + tax).round(2) %>

    <div class="md:flex md:gap-8">
      <!-- Items -->
      <div class="md:w-2/3 w-full">
        <div class="card p-4">
          <div class="space-y-4">
            <% @cart.cart_items.each do |item| %>
              <div class="flex gap-4 items-start border-b last:border-b-0 pb-4">
                <div class="w-24 h-24 bg-[var(--surface-alt)] rounded-md flex items-center justify-center overflow-hidden border border-[rgba(54,47,45,0.08)]">
                  <% if item.product.respond_to?(:image_url) && item.product.image_url.present? %>
                    <%= image_tag item.product.image_url, alt: item.product.name, class: "w-full h-full object-cover" %>
                  <% else %>
                    <i data-lucide="image" class="w-5 h-5 text-subtle"></i>
                  <% end %>
                </div>

                <div class="flex-1">
                  <div class="flex items-start justify-between">
                    <div>
                      <h3 class="text-lg font-semibold" style="color: var(--text);">
                        <%= link_to item.product.name, product_path(item.product), class: "hover:underline" %>
                      </h3>
                      <p class="text-sm text-subtle"><%= truncate(item.product.description, length: 120) %></p>
                    </div>

                    <div class="text-right">
                      <p class="text-lg font-semibold" style="color: var(--text);"><%= number_to_currency(item.product.price) %></p>
                      <p class="text-sm text-subtle">Ã— <%= item.quantity %></p>
                    </div>
                  </div>

                  <div class="mt-3 flex items-center gap-3">
                    <%= form_with model: item, local: true, class: "flex items-center gap-2" do |f| %>
                      <%= f.number_field :quantity, min: 1, max: item.product.stock, class: "w-24 px-3 py-2 border rounded-md text-center" %>
                      <%= f.submit "Update", class: "btn-ghost" %>
                    <% end %>

                    <%= button_to cart_item_path(item), method: :delete, form_class: "m-0", class: "btn-pill btn-pill-danger", data: { turbo_confirm: "Remove this item?" } do %>
                      <i data-lucide="trash-2" class="w-4 h-4"></i>
                      <span>Remove</span>
                    <% end %>

                    <div class="ml-auto text-sm" style="color: var(--text);">
                      Subtotal: <span class="font-medium"><%= number_to_currency(item.product.price * item.quantity) %></span>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Summary -->
      <aside class="md:w-1/3 w-full mt-4 md:mt-0">
        <div class="card p-6 sticky top-6">
          <h2 class="text-lg font-semibold mb-4" style="color: var(--text);">Order Summary</h2>

          <div class="space-y-2 text-sm">
            <div class="flex justify-between text-subtle">
              <span>Subtotal</span>
              <span><%= number_to_currency(subtotal) %></span>
            </div>
            <div class="flex justify-between text-subtle">
              <span>Tax (10%)</span>
              <span><%= number_to_currency(tax) %></span>
            </div>
            <div class="flex justify-between pt-2 border-t font-semibold" style="color: var(--text);">
              <span>Total</span>
              <span><%= number_to_currency(total) %></span>
            </div>
          </div>

          <div class="mt-6">
            <%= button_to "Proceed to Checkout", checkout_path, method: :get, class: "w-full btn-primary justify-center" %>
          </div>
          <div class="mt-3">
            <%= link_to "Continue Shopping", products_path, class: "w-full block text-center btn-ghost" %>
          </div>
        </div>
      </aside>
    </div>
  <% else %>
    <div class="card p-6 text-center">
      <p class="text-[var(--text)]/85 mb-4">Your cart is empty.</p>
      <%= link_to "Continue shopping", products_path, class: "btn-primary" %>
    </div>
  <% end %>
</div>
