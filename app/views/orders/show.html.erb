<% content_for :title, "Order ##{@order.id}" %>

<div class="max-w-7xl mx-auto px-6 lg:px-8 py-8">
  <% if notice.present? %>
    <div class="alert alert-success mb-4"><i data-lucide="check-circle" class="w-4 h-4"></i><span><%= notice %></span></div>
  <% end %>

  <!-- Order Success Header -->
  <div class="card p-8 mb-6 text-center">
    <div class="w-16 h-16 bg-[var(--secondary-100)] rounded-full flex items-center justify-center mx-auto mb-4">
      <i data-lucide="check" class="w-8 h-8 text-[var(--secondary-700)]"></i>
    </div>
    <h1 class="text-3xl font-semibold mb-2" style="color: var(--text);">Order Placed Successfully!</h1>
    <p class="text-subtle mb-4">Thank you for your order. We've received it and will process it shortly.</p>
    <div class="inline-flex items-center gap-2 bg-[var(--surface-alt)] px-4 py-2 rounded-lg border border-[rgba(54,47,45,0.08)]">
      <span class="text-sm text-subtle">Order ID:</span>
      <span class="font-mono font-semibold" style="color: var(--text);">#<%= @order.id.to_s.first(8) %></span>
    </div>
  </div>

  <!-- Order Details -->
  <div class="card p-6 mb-6">
    <h2 class="text-xl font-semibold mb-4" style="color: var(--text);">Order Details</h2>

    <div class="grid grid-cols-2 gap-4 mb-6 text-sm">
      <div>
        <p class="text-subtle">Order Date</p>
        <p class="font-medium" style="color: var(--text);"><%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      </div>
      <div>
        <p class="text-subtle">Status</p>
        <span class="badge badge-tonal">
          <i data-lucide="package-check" class="w-3.5 h-3.5"></i>
          <%= @order.status.titleize %>
        </span>
      </div>
    </div>

    <!-- Order Items -->
    <div class="border-t pt-4">
      <h3 class="font-semibold mb-3" style="color: var(--text);">Items Ordered</h3>
      <div class="space-y-4">
        <% @order.order_items.each do |item| %>
          <div class="flex gap-4 items-center pb-4 border-b last:border-b-0">
            <div class="w-20 h-20 bg-[var(--surface-alt)] border border-[rgba(54,47,45,0.08)] rounded-md flex items-center justify-center overflow-hidden">
              <% if item.product.respond_to?(:image_url) && item.product.image_url.present? %>
                <%= image_tag item.product.image_url, alt: item.product.name, class: "w-full h-full object-cover" %>
              <% else %>
                <i data-lucide="image" class="w-4 h-4 text-subtle"></i>
              <% end %>
            </div>

            <div class="flex-1">
              <h4 class="font-medium" style="color: var(--text);"><%= item.product.name %></h4>
              <p class="text-sm text-subtle">Quantity: <%= item.quantity %> Ã— <%= number_to_currency(item.price) %></p>
              <% if item.product.admin %>
                <p class="text-xs text-subtle mt-1">Sold by: <%= item.product.admin.user_name %></p>
              <% end %>
            </div>

            <div class="text-right">
              <p class="font-semibold" style="color: var(--text);"><%= number_to_currency(item.price * item.quantity) %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Order Summary -->
    <div class="border-t mt-4 pt-4">
      <div class="space-y-2 text-sm">
        <% subtotal = @order.order_items.sum { |item| item.price * item.quantity } %>
        <% tax = (subtotal * 0.1).round(2) %>
        <% total = (subtotal + tax).round(2) %>

        <div class="flex justify-between text-subtle">
          <span>Subtotal</span>
          <span><%= number_to_currency(subtotal) %></span>
        </div>
        <div class="flex justify-between text-subtle">
          <span>Tax (10%)</span>
          <span><%= number_to_currency(tax) %></span>
        </div>
        <div class="flex justify-between text-subtle">
          <span>Shipping</span>
          <span class="text-green-700 font-medium">FREE</span>
        </div>
        <div class="flex justify-between font-bold text-lg border-t pt-2" style="color: var(--text);">
          <span>Total</span>
          <span><%= number_to_currency(total) %></span>
        </div>
      </div>
    </div>
  </div>

  <!-- Customer Information -->
  <div class="card p-6 mb-6">
    <h2 class="text-xl font-semibold mb-4" style="color: var(--text);">Shipping Information</h2>
    <div>
      <p class="font-medium" style="color: var(--text);"><%= @order.customer.user.name %></p>
      <p class="text-subtle"><%= @order.customer.user.email %></p>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex gap-4">
    <%= link_to orders_path, class: "flex-1 text-center btn-primary justify-center" do %>
      <i data-lucide="list" class="w-4 h-4"></i>
      <span>View All Orders</span>
    <% end %>
    <%= link_to products_path, class: "flex-1 text-center btn-ghost justify-center" do %>
      <i data-lucide="arrow-left" class="w-4 h-4"></i>
      <span>Continue Shopping</span>
    <% end %>
  </div>
</div>
