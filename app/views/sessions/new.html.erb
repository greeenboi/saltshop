<% content_for :title, "Log In" %>

<div class="max-w-md mx-auto px-6 lg:px-8 py-12">
  <div class="card p-8">
    <div class="mb-6 text-center">
      <h2 class="text-2xl font-semibold" style="color: var(--text);">Sign in to your account</h2>
      <p class="mt-1 text-sm text-subtle">Welcome back — please enter your credentials.</p>
    </div>

    <% if flash[:alert].present? %>
      <div class="alert alert-error mb-4">
        <i data-lucide="x-circle" class="w-4 h-4"></i>
        <span><%= flash[:alert] %></span>
      </div>
    <% end %>

    <%= form_with url: login_path, local: true, class: "space-y-5" do |form| %>
      <div>
        <label for="username" class="block text-sm font-medium text-muted">Username</label>
        <%= form.text_field :username, id: "username", class: "mt-1 w-full px-3 py-2 border rounded-md", placeholder: "yourname" %>
      </div>

      <div>
        <label for="password" class="block text-sm font-medium text-muted">Password</label>
        <%= form.password_field :password, id: "password", class: "mt-1 w-full px-3 py-2 border rounded-md", placeholder: "••••••••" %>
      </div>

      <div class="flex items-center justify-between">
        <label class="inline-flex items-center gap-2 text-sm text-subtle">
          <%= check_box_tag :remember_me, '1', false, class: "h-4 w-4" %>
          <span>Remember me</span>
        </label>
        <div class="text-sm">
          <%= link_to "Forgot your password?", "#", class: "text-subtle hover:text-[var(--brand-700)]" %>
        </div>
      </div>

      <div>
        <%= form.submit "Log In", class: "w-full btn-primary justify-center" %>
      </div>
    <% end %>

    <p class="mt-6 text-center text-sm text-subtle">
      Don't have an account?
      <%= link_to "Sign up", signup_path, class: "font-medium hover:text-[var(--brand-700)] ml-1" %>
    </p>
  </div>
</div>